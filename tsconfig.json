{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "ES2017",
    "outDir": "dist/ts",
    "module": "ES2020",
    "inlineSourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "include": ["source/**/*.ts"]
}
